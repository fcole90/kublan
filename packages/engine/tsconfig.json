{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "ESNext",
    "outDir": "dist",
    "checkJs": true,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "eslint.config.mjs",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}